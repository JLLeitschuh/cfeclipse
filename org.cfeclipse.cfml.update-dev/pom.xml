<?xml version="1.0" encoding="UTF-8"?>
<project
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
	xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.cfeclipse.ide</groupId>
		<artifactId>cfeclipse</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<groupId>org.cfeclipse.ide</groupId>
	<artifactId>org.cfeclipse.cfml.update-dev</artifactId>
	<version>1.5.0</version>
	<packaging>eclipse-update-site</packaging>
	<properties>
		<site.suffix>-dev</site.suffix>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho.version}</version>
				<configuration>
					<target>${plugin.p2.dir}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-p2-extras-plugin</artifactId>
				<version>${tycho-extras.version}</version>
				<executions>
					<execution>
						<id>add-to-update-site</id>
						<phase>verify</phase>
						<goals>
							<goal>mirror</goal>
						</goals>
						<configuration>
							<source>
								<repository>
									<url>http://cfeclipse.org/update${site.suffix}</url>
								</repository>
							</source>
							<destination>${plugin.p2.dir}</destination>
							<append>true</append>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
